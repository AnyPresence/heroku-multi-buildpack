#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)
require 'multipack'
require 'tmpdir'

log "Processing #{TRIGGER_FILE_NAME}..."

repos = IO.readlines(TRIGGER_FILE)

repos.each do |git_repo|
  name = git_repo.split('/').last
  log "Building #{name}"
  Dir.mktmpdir(name) do |dir| 
    puts "Process here!"
  end
end
